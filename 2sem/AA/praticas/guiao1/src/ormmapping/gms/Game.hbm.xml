<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="src.gms.Game" table="Game" lazy="false">
		<id name="Id" column="Id" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<many-to-one name="platform" column="PlatformId" class="src.gms.Platform" cascade="save-update,lock" unique="true" not-null="true" lazy="proxy" access="field">
		</many-to-one>
		<property name="name" column="Name" type="string" length="255" not-null="false" lazy="false"/>
		<property name="year" column="Year" type="integer" length="10" not-null="true" lazy="false"/>
		<property name="price" column="Price" type="double" not-null="true" lazy="false"/>
		<property name="description" column="Description" type="string" length="255" not-null="false" lazy="false"/>
	</class>
</hibernate-mapping>
